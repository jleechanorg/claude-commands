# Dockerfile for MCP Test Runner
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY testing_mcp/requirements.txt /app/testing_mcp/requirements.txt
COPY mvp_site/requirements.txt /app/mvp_site/requirements.txt

RUN pip install --no-cache-dir -r testing_mcp/requirements.txt
RUN pip install --no-cache-dir -r mvp_site/requirements.txt

# Copy application code
COPY testing_mcp/ /app/testing_mcp/
COPY mvp_site/ /app/mvp_site/

# Set Python path
ENV PYTHONPATH="/app:/app/testing_mcp:/app/mvp_site"

# Create results directory
RUN mkdir -p /app/test_results

# Default command runs all tests
CMD ["python", "-m", "pytest", "testing_mcp/integration/", "-v", "--junitxml=test_results/test_results.xml"]
