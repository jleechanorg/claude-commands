#!/bin/bash
# Global git header command wrapper
# Works from any directory within a git repository

# Find git root
git_root=$(git rev-parse --show-toplevel 2>/dev/null)
if [ $? -ne 0 ]; then
    echo "[Not in a git repository]"
    exit 1
fi

# Find and execute the git-header.sh script
if [ -f "$git_root/claude_command_scripts/git-header.sh" ]; then
    exec "$git_root/claude_command_scripts/git-header.sh" "$@"
elif [ -f "$git_root/worktree_roadmap/claude_command_scripts/git-header.sh" ]; then
    exec "$git_root/worktree_roadmap/claude_command_scripts/git-header.sh" "$@"
else
    echo "[git-header.sh not found in repository]"
    exit 1
fi