{
  "name": "worldarchitect-ai-suite",
  "version": "0.3.0",
  "description": "Opinionated automation, governance, and quality guardrails for WorldArchitect.AI projects. Includes secondo multi-model AI feedback plugin with MCP server.",
  "author": {
    "name": "WorldArchitect.AI maintainers"
  },
  "homepage": "https://worldarchitect.ai",
  "repository": "https://github.com/jleechanorg/worldarchitect.ai.git",
  "license": "MIT",
  "keywords": [
    "worldarchitect",
    "automation",
    "hooks",
    "quality",
    "governance",
    "secondo",
    "multi-model",
    "code-review",
    "mcp"
  ],
  "commands": [
    "../.claude/commands/"
  ],
  "agents": [
    "../.claude/agents/"
  ],
  "hooks": "../.claude/hooks/hooks.plugin.json",
  "mcpServers": {
    "secondo": {
      "command": "node",
      "args": ["mcp_servers/secondo/server.js"],
      "env": {
        "MCP_SECONDO_PORT": "3003",
        "MCP_SECONDO_HOST": "localhost"
      }
    }
  }
}
