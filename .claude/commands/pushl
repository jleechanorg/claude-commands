#!/bin/bash
# pushl - Automation-friendly push command for copilot workflows
# NON-INTERACTIVE - designed for automated execution
# Separate from interactive pushlite.sh to prevent automation conflicts

set -e

# Default values
MESSAGE=""
FORCE=false

# Parse arguments
while [[ $# -gt 0 ]]; do
    case $1 in
        --message|-m)
            MESSAGE="$2"
            shift 2
            ;;
        --force|-f)
            FORCE=true
            shift
            ;;
        --help|-h)
            echo "pushl - NON-INTERACTIVE automation push for copilot workflows"
            echo "Usage: pushl [--message MESSAGE] [--force]"
            echo "Options:"
            echo "  --message, -m MESSAGE  Commit message"
            echo "  --force, -f           Force push with lease"
            exit 0
            ;;
        *)
            echo "Unknown option: $1"
            echo "Use --help for usage information"
            exit 1
            ;;
    esac
done

# Check for changes
if [[ -z $(git status --porcelain) ]]; then
    echo "No changes to push"

    # Create result JSON even when no changes
    BRANCH=$(git branch --show-current)
    SANITIZED_BRANCH=$(echo "$BRANCH" | sed 's/[^a-zA-Z0-9._-]/_/g' | sed 's/^[.-]*//g')
    OUTPUT_DIR="/tmp/copilot_${SANITIZED_BRANCH}"
    mkdir -p "$OUTPUT_DIR"
    cat > "$OUTPUT_DIR/push.json" << EOF
{
  "pushed_at": "$(date -Iseconds)",
  "branch": "$(git branch --show-current)",
  "remote": "origin",
  "commit_sha": "$(git rev-parse HEAD)",
  "message": "No changes to push",
  "success": true,
  "status": "up_to_date"
}
EOF

    echo "✅ Status: up to date"
    exit 0
fi

# Stage all changes
git add -A

# Commit with message
if [[ -z "$MESSAGE" ]]; then
    MESSAGE="chore: Automated commit from copilot"
fi
git commit -m "$MESSAGE"

# Push to remote
if [[ "$FORCE" == "true" ]]; then
    git push --force-with-lease
else
    git push
fi

# Create result JSON with branch-specific path
BRANCH=$(git branch --show-current)
SANITIZED_BRANCH=$(echo "$BRANCH" | sed 's/[^a-zA-Z0-9._-]/_/g' | sed 's/^[.-]*//g')
OUTPUT_DIR="/tmp/copilot_${SANITIZED_BRANCH}"
mkdir -p "$OUTPUT_DIR"
cat > "$OUTPUT_DIR/push.json" << EOF
{
  "pushed_at": "$(date -Iseconds)",
  "branch": "$(git branch --show-current)",
  "remote": "origin",
  "commit_sha": "$(git rev-parse HEAD)",
  "message": "$MESSAGE",
  "success": true
}
EOF

echo "✅ Changes pushed successfully"
