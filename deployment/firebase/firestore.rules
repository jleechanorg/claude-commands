rules_version = '2';

// WorldArchitect.AI - ULTRA-SIMPLE Authorization Rules
// NO field validation = NO maintenance burden when adding fields

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Campaigns - owner only, NO field restrictions
    match /campaigns/{campaignId} {
      allow create: if request.auth.uid == request.resource.data.user_id;
      allow read, update, delete: if request.auth.uid == resource.data.user_id;
    }

    // Characters - owner only
    match /campaigns/{campaignId}/characters/{characterId} {
      allow create: if request.auth.uid == request.resource.data.user_id;
      allow read, update, delete: if request.auth.uid == resource.data.user_id;
    }

    // Sessions - owner only
    match /campaigns/{campaignId}/sessions/{sessionId} {
      allow create: if request.auth.uid == request.resource.data.user_id;
      allow read, update, delete: if request.auth.uid == resource.data.user_id;
    }

    // Generic pattern for any new collections
    match /{collection}/{document} {
      allow create: if request.auth.uid == request.resource.data.user_id;
      allow read, update, delete: if request.auth.uid == resource.data.user_id;
    }
  }
}

