# Frontend v2 Environment Variables
# Copy this file to .env.local for local development

# API Configuration
VITE_API_BASE_URL=http://localhost:8081

# Test Mode Configuration (Development Only)
# WARNING: These variables only work in development mode (npm run dev)
# They are automatically disabled in production builds
VITE_TEST_MODE=false
VITE_TEST_USER_ID=test-user-123

# Firebase Configuration (Required)
VITE_FIREBASE_API_KEY=your-firebase-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Feature Flags
VITE_ENABLE_MOCK_MODE=true
VITE_ENABLE_DEBUG_LOGGING=false
