# Dockerfile for Mock MCP Server
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install dependencies
COPY testing_mcp/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy mock server code
COPY testing_mcp/utils/mock_mcp_server.py /app/mock_mcp_server.py
COPY testing_mcp/mock_data/ /app/mock_data/

# Expose port
EXPOSE 8001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8001/health || exit 1

# Run mock server
CMD ["python", "mock_mcp_server.py", "8001"]
