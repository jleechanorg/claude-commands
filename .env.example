# WorldArchitect.AI Environment Variables
# Copy this file to .env and update with your actual values

# Production Configuration
GEMINI_API_KEY=your_production_gemini_api_key_here
FIREBASE_PROJECT_ID=your_production_firebase_project

# Real Service Testing Configuration (Real-Mode Testing Framework)
# Used by /tester and /testerc commands for testing with actual services
TEST_MODE=mock                          # mock|real|capture
TEST_GEMINI_API_KEY=your_test_api_key_here  # Required for real/capture modes
TEST_FIRESTORE_PROJECT=worldarchitect-test  # Optional, defaults to test project
TEST_CAPTURE_DIR=/tmp/test_captures    # Optional, defaults to timestamped dir

# Testing Modes Explained:
# - mock: Use mock services (fast, free, no external dependencies)
# - real: Use actual Firestore and Gemini APIs (costs money, validates real behavior)
# - capture: Real mode + capture all service interactions for mock improvement

# Legacy Test Configuration (for run_ui_tests.sh compatibility)
USE_MOCK_FIREBASE=true                  # true|false
USE_MOCK_GEMINI=true                    # true|false

# Development Configuration
DEBUG=true
TESTING=true                            # Set automatically by test scripts
