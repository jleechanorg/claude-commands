      ],
      "**/*.yml": [
        "mvp_site/test_integration/test_*.py"
      ],
      "**/*.yaml": [
        "mvp_site/test_integration/test_*.py"
      ],
      "**/Dockerfile": [
        "mvp_site/test_integration/test_*.py"
      ],
      "**/[Dd]ocker-compose*.yml": [
        "mvp_site/test_integration/test_*.py"
      ],
      "**/[Dd]ocker-compose*.yaml": [
        "mvp_site/test_integration/test_*.py"
      ],
      "**/Makefile": [
        "mvp_site/test_integration/test_*.py"
      ],
      "pyproject.toml": [
        "mvp_site/test_integration/test_*.py"
      ],
      "poetry.lock": [
        "mvp_site/test_integration/test_*.py"
      ],
      "Pipfile": [
        "mvp_site/test_integration/test_*.py"
      ],
      "Pipfile.lock": [
        "mvp_site/test_integration/test_*.py"
      ],
      "**/constraints*.txt": [
        "mvp_site/test_integration/test_*.py"
      ],
      "**/requirements*.in": [
        "mvp_site/test_integration/test_*.py"
      ],
      "**/requirements*.txt": [
        "mvp_site/test_integration/test_*.py"
      ],
      "mvp_site/**/*.py": [
        "mvp_site/tests/test_end2end/*.py",
        "mvp_site/test_integration/test_*.py"
      ],
      "test_selection_config.json": [
        "scripts/test_test_dependency_analyzer.py",
        "mvp_site/test_integration/test_*.py"
      ],
      "mvp_site/tests/test_*.py": [
        "self"
      ],
      "mvp_site/testing_ui/test_*.py": [
        "self"
      ]
    },
    "always_run": [
      "mvp_site/test_integration/test_integration_mock.py",
      ".claude/hooks/tests/test_hook_patterns.py"
    ]
  },
  "settings": {
    "safety_threshold": 0.5,
    "conservative_mode": true,
    "fallback_to_all_tests": true,
    "include_modified_tests": true
  },
  "exclusions": {
    "ignore_patterns": [
      "**/__pycache__/**",
      "**/venv/**",
      "**/node_modules/**",
      "**/.git/**",
      "**/temp/**",
      "**/*.pyc",
      "**/dist/**",
      "**/build/**",
      "**/.cache/**",
      "**/.pytest_cache/**",
      "**/coverage/**",
      "**/htmlcov/**"
    ]
  },
  "metadata": {
    "ci_compatibility": {
      "github_actions": "Fully supported with Python 3.11 virtual environment",
      "local_development": "Uses intelligent test selection for faster iteration",
      "test_pattern_sync": "Config paths verified against actual test directory structure",
      "last_validated": "2025-08-15"
    }
  }
